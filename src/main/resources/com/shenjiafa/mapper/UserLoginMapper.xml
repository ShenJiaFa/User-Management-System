<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shenjiafa.mapper.UserLoginMapper">
    <select id="queryUserLogin" resultType="com.shenjiafa.model.UserLogin">
        select *
        from t_user_login
        where username = #{userName}
          and password = #{password};
    </select>

    <select id="selectByUserName" resultType="com.shenjiafa.model.UserLogin">
        select *
        from t_user_login
        where username = #{userName};
    </select>

    <select id="addUserLogin" resultType="com.shenjiafa.model.UserLogin">
        insert into t_user_login values (null,#{userName},#{password});
    </select>

</mapper>
