<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shenjiafa.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.shenjiafa.model.User">
        <result column="insert_time" property="insertTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <select id="selectAllUsers" resultMap="userResultMap">
        select *
        from t_user;
    </select>

    <select id="selectUserById" resultMap="userResultMap">
        select *
        from t_user
        where id = #{id};
    </select>

    <select id="selectUsersByConditions" resultMap="userResultMap">
        select *
        from t_user
        <where>
            <if test="name!=null and name!=''">
                name like #{name}
            </if>
            <if test="gender!=null and gender!=''">
                and gender = #{gender}
            </if>
            <if test="age!=null">
                and age = #{age}
            </if>
            <if test="address!=null and address!=''">
                and address like #{address};
            </if>
        </where>
    </select>

    <select id="selectUsersByObject" resultMap="userResultMap">
        select *
        from t_user
        <where>
            <if test="name!=null and name!=''">
                name like #{name}
            </if>
            <if test="gender!=null and gender!=''">
                and gender = #{gender}
            </if>
            <if test="age!=null">
                and age = #{age}
            </if>
            <if test="address!=null and address!=''">
                and address like #{address};
            </if>
        </where>
    </select>

    <select id="selectUsersByMap" resultType="com.shenjiafa.model.User">
        select *
        from t_user
        <where>
            <if test="name!=null and name!=''">
                name like #{name}
            </if>
            <if test="gender!=null and gender!=''">
                and gender = #{gender}
            </if>
            <if test="age!=null">
                and age = #{age}
            </if>
            <if test="address!=null and address!=''">
                and address like #{address};
            </if>
        </where>
    </select>

</mapper>